<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="10" author="Samandar">
        <createTable tableName="active_place">
            <column name="id" type="UUID" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="place_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="BOOLEAN"/>
            <column name="price" type="VARCHAR(255)"/>
            <column name="day" type="DATE"/>
            <column name="activated_date" type="TIMESTAMP"/>
            <column name="deactivated_date" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint
                baseColumnNames="place_id"
                baseTableName="active_place"
                constraintName="fk_active_place_place"
                referencedColumnNames="id"
                referencedTableName="rental_place"/>
    </changeSet>

</databaseChangeLog>
