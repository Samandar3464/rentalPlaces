<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="10" author="Samandar">
        <createTable tableName="rental_place">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="place_type" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="rent_for" type="VARCHAR(255)"/>
            <column name="info" type="TEXT"/>
            <column name="owner_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="INTEGER"/>
            <column name="latitude" type="INTEGER"/>
            <column name="active" type="BOOLEAN"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseColumnNames="owner_id"
                baseTableName="rental_place"
                constraintName="fk_rental_place_owner"
                referencedColumnNames="id"
                referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>
